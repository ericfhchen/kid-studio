<div class="product-hero">
  <div class="container">
    <div class="product-hero__content">
      <div class="product-hero__image-container" style="width: {{ section.settings.image_container_width_desktop | default: 75 }}%;">
        {% if section.settings.image != blank %}
          <img 
            src="{{ section.settings.image | img_url: 'master' }}" 
            alt="{{ section.settings.image.alt | escape }}"
            class="product-hero__image"
            loading="lazy"
          >
        {% else %}
          <img 
          src="https://cdn.shopify.com/s/files/1/0744/8844/7222/files/kid10-book-product-photo-placeholder.jpg?v=1742002464" 
          alt="{{ section.settings.image.alt | escape }}"
          class="product-hero__image"
          loading="lazy"
        >
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  @media (max-width: 768px) {
    .product-hero__image-container {
      width: {{ section.settings.image_container_width_mobile | default: 100 }}% !important;
    }
  }
</style>

{% schema %}
{
  "name": "Product Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product Image"
    },
    {
      "type": "header",
      "content": "Image Container Width"
    },
    {
      "type": "range",
      "id": "image_container_width_desktop",
      "label": "Desktop Width (%)",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 60,
      "info": "Width of the image container on desktop displays"
    },
    {
      "type": "range",
      "id": "image_container_width_mobile",
      "label": "Mobile Width (%)",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 100,
      "info": "Width of the image container on mobile displays"
    }
  ],
  "presets": [
    {
      "name": "Product Hero",
      "category": "Product"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.product-hero {
  
}

.product-hero__content {
  display: flex;
  justify-content: center;
  align-items: center;
}

.product-hero__image-container {
  margin: 0 auto;
}

.product-hero__image {
  width: 100%;
  height: auto;
  display: block;
}

