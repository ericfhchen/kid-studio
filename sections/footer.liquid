<footer class="footer">
  <a href="http://kidstudio.co" target="_blank" class="footer__container">
    <div class="footer__text">BY KID. STUDIO</div>
  </a>
  {% comment %} <div class="website-credit__text">Website by <span><a href="https://left.systems" target="_blank">LEFT</a></span></div> {% endcomment %}
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "All rights reserved."
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "About Us"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Use this text to share information about your brand with your customers.</p>"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Subscribe to our newsletter"
        }
      ]
    },
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Quick links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "newsletter"
        },
        {
          "type": "link_list"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.footer {
  background: none;
  padding: 4rem 0 0 0;
  text-align: center;
  letter-spacing: 0;
  position: relative;
}

.footer__container {
  background: #000;
  display: flex;
  justify-content: center;
  align-items: center;
  max-width: 60%;
  height: 20rem;
  margin: 0 auto;
  transition: all 0.3s ease;
}

.footer__text {
  font-size: 3rem;
  font-weight: bold;
  font-family: Helvetica, sans-serif;
  color: #fff;
  transition: filter 0.3s ease;
  overflow: visible;
  width: 100%;
  margin: 0 auto;
}

.footer__container:hover {
  text-decoration: none;
}

.footer__container:hover .footer__text {
  filter: blur(4px);
}

.footer__newsletter-form {
  display: flex;
}

.footer__newsletter-input {
  flex: 1;
  padding: 8px 12px;
  border: 1px solid #ddd;
  border-right: none;
  font-size: 14px;
}

.footer__newsletter-submit {
  background-color: #000;
  color: #fff;
  border: none;
  padding: 0 15px;
  cursor: pointer;
  font-size: 14px;
  font-weight: 500;
}

.website-credit__text {
  position: absolute;
  bottom: 20px;
  left: 20px;
  z-index: 100;
  font-size: 0.75rem;
  font-family: Helvetica, sans-serif;
  color: #000;
}

.website-credit__text span a {
  color: #000;
  text-decoration: none;
}

.website-credit__text span a:hover {
  animation: blink 0.1s linear infinite;
}

@media screen and (max-width: 768px) {
.footer__container {
  max-width: 75%;
  height: 10rem;

}

.footer__text {
  font-size: 1.5rem;
}

.website-credit__text {
    font-size: 0.65rem;
  }
}
{% endstylesheet %} 