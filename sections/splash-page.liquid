{% if settings.enable_splash_page %}
<div class="splash-page" id="splash-page">
  <div class="splash-page__content">
    <div class="splash-page__image splash-page__image--desktop">
      {% if section.settings.desktop_image != blank %}
        <img src="{{ section.settings.desktop_image | img_url: 'master' }}" 
             alt="{{ section.settings.desktop_image.alt | escape | default: shop.name }}"
             class="splash-image">
      {% endif %}
    </div>
    <div class="splash-page__image splash-page__image--mobile">
      {% if section.settings.mobile_image != blank %}
        <img src="{{ section.settings.mobile_image | img_url: 'master' }}" 
             alt="{{ section.settings.mobile_image.alt | escape | default: shop.name }}"
             class="splash-image">
      {% endif %}
    </div>
  </div>
</div>

<style>
  .splash-page {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 9999;
    background-color: {{ settings.splash_page_background }};
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }
  
  .splash-page__content {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .splash-page__image {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }
  
  .splash-image {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
  }
  
  .splash-page__image--desktop {
    display: block;
  }
  
  .splash-page__image--mobile {
    display: none;
  }
  
  @media (max-width: 768px) {
    .splash-page__image--desktop {
      display: none;
    }
    
    .splash-page__image--mobile {
      display: block;
    }
  }
</style>

