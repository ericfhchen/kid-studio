{% if settings.enable_splash_page %}
<div class="splash-page" id="splash-page">
  <div class="splash-page__content">
    <div class="splash-page__image splash-page__image--desktop">
      {% if section.settings.desktop_image != blank %}
        <img src="{{ section.settings.desktop_image | img_url: 'master' }}" 
             alt="{{ section.settings.desktop_image.alt | escape | default: shop.name }}"
             class="splash-image">
      {% endif %}
    </div>
    <div class="splash-page__image splash-page__image--mobile">
      {% if section.settings.mobile_image != blank %}
        <img src="{{ section.settings.mobile_image | img_url: 'master' }}" 
             alt="{{ section.settings.mobile_image.alt | escape | default: shop.name }}"
             class="splash-image">
      {% endif %}
    </div>
  </div>
  <noscript>
    <div class="splash-page__noscript-message">
      Please enable JavaScript to view this site.
    </div>
  </noscript>
</div>

<style>
  .splash-page {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100dvh;
    z-index: 2147483647; /* Maximum z-index value */
    background-color: {{ settings.splash_page_background }};
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }
  
  .splash-page__content {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .splash-page__image {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }
  
  .splash-image {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    pointer-events: none;
  }
  
  .splash-page__image--desktop {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .splash-page__image--mobile {
    display: none;
  }
  
  .splash-page__noscript-message {
    position: absolute;
    bottom: 20px;
    left: 0;
    right: 0;
    text-align: center;
    color: white;
    font-family: sans-serif;
    font-size: 16px;
  }
  
  @media (max-width: 768px) {
    .splash-page__image--desktop {
      display: none;
    }
    
    .splash-page__image--mobile {
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }
</style>
{% else %}
<!-- Splash page is disabled, normal content will be shown -->
{% endif %}

{% schema %}
{
  "name": "Splash Page",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image",
      "info": "Recommended: SVG image that will scale properly. Will display at 100% width or height, whichever is smaller."
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image",
      "info": "Recommended: SVG image that will scale properly. Will display at 100% width or height, whichever is smaller."
    }
  ],
  "presets": [
    {
      "name": "Splash Page",
      "category": "Promotional"
    }
  ]
}
{% endschema %} 