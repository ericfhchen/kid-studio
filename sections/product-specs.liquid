<div class="product-specs">
  <div class="container">
    <div class="product-specs__content" style="max-width: {{ section.settings.content_width_desktop | default: 70 }}%;">
      
      {% if section.settings.description != blank %}
        <div class="product-specs__description">{{ section.settings.description }}</div>
      {% endif %}
      
    </div>
  </div>
</div>

<style>
  @media (max-width: 1024px) {
    .product-specs__content {
      max-width: {{ section.settings.content_width_mobile | default: 100 }}% !important;
    }
  }
</style>

{% schema %}
{
  "name": "Product Specs",
  "settings": [
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>273 PP.<br>SOFTCOVER WITH TIP-IN IMAGE.<br>HARDCOVER LINEN SLIP CASE.<br>FOIL LETTERING.<br>EXPOSED SMYTH-SEWN SPINE.</p>"
    },
    {
      "type": "header",
      "content": "Content Width"
    },
    {
      "type": "range",
      "id": "content_width_desktop",
      "label": "Desktop Width (%)",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 70,
      "info": "Width of the content on desktop displays"
    },
    {
      "type": "range",
      "id": "content_width_mobile",
      "label": "Mobile Width (%)",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 100,
      "info": "Width of the content on mobile displays"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.product-specs {
  padding: 4rem 0;
  font-family: 'Panama Monospace', monospace;
}

.product-specs__content {
  margin: 0 auto;
}

.product-specs__description {
  font-size: 3rem;
  text-align: center;
}

@media (max-width: 1024px) {
  .product-specs {
    padding: 2rem 0;
  }
  
  .product-specs__description {
    font-size: 1.5rem;
  }
}
{% endstylesheet %} 