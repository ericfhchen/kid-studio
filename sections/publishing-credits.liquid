<div class="publishing-credits">
  <div class="publishing-credits__content">
    <div class="publishing-credits__text">
      {% if section.settings.text != blank %}
        <div class="rte">{{ section.settings.text }}</div>
      {% endif %}
    </div>
  </div>
</div>

