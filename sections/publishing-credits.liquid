{% stylesheet %}
.publishing-credits {
  padding: 20px;
  font-family: 'Panama Monospace', monospace;
  font-size: 4rem;
  text-align: left;
}

.publishing-credits__content {
  margin: 0 auto;
}

.publishing-credits__text span a,
.publishing-credits__text .rte a {
  text-decoration: none;
  color: #000;
}

.publishing-credits__text span a:hover,
.publishing-credits__text .rte a:hover {
  animation: blink 0.1s linear infinite;
}

@keyframes blink {
  0% { opacity: 1; }
  50% { opacity: 0; }
  100% { opacity: 1; }
}

@media (max-width: 1400px) {
  .publishing-credits {
    font-size: 3rem;
  }
}

@media (max-width: 1024px) {
  .publishing-credits {
    font-size: 2rem;
  }
}

@media (max-width: 768px) {
  .publishing-credits {
    font-size: 1.5rem;
    padding: 8px;
  }
}
{% endstylesheet %} 