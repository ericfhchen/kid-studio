<div class="page">
  <div class="page__header">
    <h1 class="page__title">{{ page.title }}</h1>
  </div>
  
  <div class="page__content rte">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
  "name": "Page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show page title",
      "default": true
    }
  ]
}
{% endschema %} 