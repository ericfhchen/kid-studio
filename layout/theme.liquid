  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="#D00002">
  <link rel="canonical" href="{{ canonical_url }}">
  <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

  <title>
    {{ page_title }}
    {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
    {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  </title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {{ content_for_header }}

  {{ 'application.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'application.js' | asset_url }}" defer></script>
  
  {% if settings.enable_splash_page %}
  <style>
    html, body {
      overflow: hidden !important;
      height: 100% !important;
      width: 100% !important;
      margin: 0 !important;
      padding: 0 !important;
    }
  </style>
  {% endif %}
</head>

<body class="template-{{ template.name | handle }}">
  {% if settings.enable_splash_page %}
    {% section 'splash-page' %}
  {% else %}
    <main role="main" id="MainContent">
      {{ content_for_layout }}
    </main>
  {% endif %}
  
  {% if settings.enable_splash_page %}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Prevent inspection bypass
      function preventInspectionBypass() {
        // Check if splash page exists
        const splashPage = document.querySelector('.splash-page');
        if (!splashPage) {
          location.reload();
          return;
        }
        
        // Prevent keyboard shortcuts
        document.addEventListener('keydown', function(e) {
          // Prevent F12, Ctrl+Shift+I, Cmd+Opt+I, Ctrl+Shift+C
          if (
            e.keyCode === 123 || 
            (e.ctrlKey && e.shiftKey && (e.keyCode === 73 || e.keyCode === 67)) ||
            (e.metaKey && e.altKey && e.keyCode === 73)
          ) {
            e.preventDefault();
          }
        });
        
        // Prevent right-click
        document.addEventListener('contextmenu', function(e) {
          e.preventDefault();
        });
        
        // Prevent touch scrolling
        document.addEventListener('touchmove', function(e) {
          e.preventDefault();
        }, { passive: false });
        
        // Set up mutation observer to detect DOM changes
        const observer = new MutationObserver(function() {
          // Check if splash page is still in DOM
          if (!document.querySelector('.splash-page')) {
            location.reload();
          }
        });
        
        // Start observing the document
        observer.observe(document.documentElement, {
          childList: true,
          subtree: true
        });
      }
      
      preventInspectionBypass();
    });
  </script>
  {% endif %}
</body>
</html> 